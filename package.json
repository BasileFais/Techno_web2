{
  "name": "site-tw2",
  "version": "1.0.0",
  "description": "Projet TechWeb2 - Catalogue d'appareils photo (MVC + TypeScript + Jest)",
  "private": true,
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
  "clean": "rimraf dist",
  "build": "tsc && npm run build:web",
  "build:web": "esbuild src/controllers/Controller.ts --bundle --platform=browser --format=esm --outfile=dist/app.js",
  "build:watch": "tsc -w",
  "dev:web": "esbuild src/controllers/Controller.ts --bundle --platform=browser --format=esm --outfile=dist/app.js --watch",
  "start": "npx serve .",
  "test": "jest",
  "test:watch": "jest --watch",
  "coverage": "jest --coverage"
}
,
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.6.3"
  }
}
